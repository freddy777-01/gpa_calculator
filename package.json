{
  "name": "gpa-calculator",
  "productName": "gpa-calculator",
  "version": "1.0.0",
  "description": "THIS IS A SIMPLE GPA CALCULATOR",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer":"electron-builder"
  },
  "build":{
    "appId":"gpa-calculator",
    "win":{
      "target":["nsis"],
      "icon":"./src/icons/gpa.ico"
    },
    "nsis":{
      "installerIcon":"./src/icons/gpa.ico",
      "uninstallerIcon":"./src/icons/gpa.ico",
      "uninstallDisplayName":"GPA CALCULATOR",
      "license":"license.txt",
      "oneClick":false,
      "allowToChangeInstallationDirectory":true
    }
  },
  "keywords": ["education"],
  "author": {
    "name": "FEMAG",
    "email": "fred45722@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/icons/gpa.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "gpa_calculator"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.0.3",
    "electron-builder": "^22.9.1"
  }
}
